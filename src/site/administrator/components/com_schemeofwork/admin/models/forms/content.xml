<?xml version="1.0" encoding="utf-8"?>
<form
    addrulepath="/administrator/components/com_schemeofwork/models/rules"
>
    <fieldset
        name="details"
        label="COM_SCHEMEOFWORK_CONTENT_DETAILS"
    >
        <field
            name="id"
            type="hidden"
        />
        <field
            name="description"
            type="text"
            label="COM_SCHEMEOFWORK_CONTENT_DESCRIPTION_LABEL"
            description="COM_SCHEMEOFWORK_CONTENT_DESCRIPTION_DESC"
            size="500"
            class="inputbox validate-contentname"
            validate="contentdescription"
            required="true"
            default=""
        />
        <field
            name="letter"
            type="text"
            label="COM_SCHEMEOFWORK_CONTENT_LETTER_LABEL"
            description="COM_SCHEMEOFWORK_CONTENT_LETTER_DESC"
            size="1"
            class="inputbox validate-contentname"
            validate="contentletter"
            required="true"
            default=""
        />
        <field
            name="key_stage_id"
            type="KeyStages"
            extension="com_schemeofwork"
            class="inputbox"
            default="0"
            label="COM_SCHEMEOFWORK_CONTENT_KEYSTAGE_LABEL"
            description="COM_SCHEMEOFWORK_CONTENT_KEYSTAGE_DESC" 
            required="true"
        >
            <option value="0">COM_SCHEMEOFWORK_CONTENT_JOPTION_SELECT_KEYSTAGE_NAME</option>
        </field>
    </fieldset>
</form>
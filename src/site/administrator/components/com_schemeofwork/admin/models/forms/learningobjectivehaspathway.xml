<?xml version="1.0" encoding="utf-8"?>
<form
    addrulepath="/administrator/components/com_schemeofwork/models/rules"
>
    <fieldset
        name="filter"
        label="COM_SCHEMEOFWORK_LEARNINGOBJECTIVEHASPATHWAY_FILTER"
        >
        <field
            name="topic_id"
            type="Topics"
            extension="com_schemeofwork"
            class="inputbox"
            default="0"
            label="COM_SCHEMEOFWORK_LEARNINGOBJECTIVEHASPATHWAY_TOPIC_LABEL"
            description="COM_SCHEMEOFWORK_LEARNINGOBJECTIVEHASPATHWAY_TOPIC_DESC" 
            required="true"
        >
            <option value="0">COM_SCHEMEOFWORK_LEARNINGOBJECTIVEHASPATHWAY_JOPTION_SELECT_TOPIC</option>
        </field>
        <field
            name="year_id"
            type="Years"
            extension="com_schemeofwork"
            class="inputbox"
            default="0"
            label="COM_SCHEMEOFWORK_LEARNINGOBJECTIVEHASPATHWAY_YEAR_LABEL"
            description="COM_SCHEMEOFWORK_LEARNINGOBJECTIVEHASPATHWAY_YEAR_DESC" 
            required="true"
        >
            <option value="0">COM_SCHEMEOFWORK_LEARNINGOBJECTIVEHASPATHWAY_JOPTION_SELECT_YEAR</option>
        </field>
        
        <field
            name="solo_taxonomy_id"
            type="SoloTaxonomies"
            extension="com_schemeofwork"
            class="inputbox"
            default="0"
            label="COM_SCHEMEOFWORK_LEARNINGOBJECTIVEHASPATHWAY_SOLOTAXONOMY_LABEL"
            description="COM_SCHEMEOFWORK_LEARNINGOBJECTIVEHASPATHWAY_SOLOTAXONOMY_DESC" 
            required="true"
        >
            <option value="0">COM_SCHEMEOFWORK_LEARNINGOBJECTIVEHASPATHWAY_JOPTION_SELECT_SOLOTAXONOMY</option>
        </field>
    </fieldset>
    <fieldset
        name="details"
        label="COM_SCHEMEOFWORK_LEARNINGOBJECTIVEHASPATHWAY_DETAILS"
    >
        <field
            name="id"
            type="hidden"
        />
        <field
            name="comment"
            type="textarea"
            extension="com_schemeofwork"
            class="inputbox validate-learningobjectivehaspathwaycomment"
            validate="learningobjectivehaspathwaycomment"
            size="500"
            default=""
            label="COM_SCHEMEOFWORK_LEARNINGOBJECTIVEHASPATHWAY_COMMENT_LABEL"
            description="COM_SCHEMEOFWORK_LEARNINGOBJECTIVEHASPATHWAY_COMMENT_DESC" 
            required="false"
        />   
        <field
            name="ks123_pathway_id"
            type="Pathways"
            extension="com_schemeofwork"
            class="radio"
            default="0"
            label="COM_SCHEMEOFWORK_LEARNINGOBJECTIVEHASPATHWAY_PATHWAYOBJECTIVE_LABEL"
            description="COM_SCHEMEOFWORK_LEARNINGOBJECTIVEHASPATHWAY_PATHWAYOBJECTIVE_DESC" 
            required="true"
        >
            <option value="0">COM_SCHEMEOFWORK_LEARNINGOBJECTIVEHASPATHWAY_JOPTION_SELECT_PATHWAYOBJECTIVE</option>
        </field>
        <field
            name="learning_objective_id"
            type="LearningObjectives"
            extension="com_schemeofwork"
            class="radio"
            default="0"
            label="COM_SCHEMEOFWORK_LEARNINGOBJECTIVEHASPATHWAY_LEARNINGOBJECTIVEDESCRIPTION_LABEL"
            description="COM_SCHEMEOFWORK_LEARNINGOBJECTIVEHASPATHWAY_LEARNINGOBJECTIVEDESCRIPTION_DESC" 
            required="true"
        >
            <option value="0">COM_SCHEMEOFWORK_LEARNINGOBJECTIVEHASPATHWAY_JOPTION_SELECT_LEARNINGOBJECTIVEDESCRIPTION</option>
        </field>
    </fieldset>
</form>